FROM node:22-alpine

ARG PRODUCT_LOGO
ARG PRODUCT_ICON
ARG PRODUCT_PAGE_TITLE
ARG WEBSOCKET_URL

ENV VITE_PRODUCT_LOGO=$PRODUCT_LOGO
ENV VITE_PRODUCT_ICON=$PRODUCT_ICON
ENV VITE_PRODUCT_PAGE_TITLE=$PRODUCT_PAGE_TITLE
ENV VITE_WEBSOCKET_URL=$WEBSOCKET_URL

WORKDIR /app

COPY package.json .

RUN npm install

COPY . .

RUN npm run build

EXPOSE 3000

CMD [ "npm", "run", "preview" ]